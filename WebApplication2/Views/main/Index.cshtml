@model List<WebApplication2.Models.Table_1>


@{
    ViewBag.Title = "Index";
    int sn = 0;
}


<style>
    table, td, th {
        background-color: brown;
    }
</style>
<h2>Employee List</h2>
<table class="table" border="1">
    <tr>
        <th>id</th>
        <th>name</th>
        <th>address</th>
        <th>contact</th>
    </tr>

    @foreach (var data in Model)
    {
        <tr>
            <td>@(++sn)</td>
            <td>@data.name</td>
            <td>@data.address</td>
            <td>@data.contact</td>
            <td><a href="@Url.Action("edit", new {id=data.id})">edit</a></td>
        </tr>
    }

</table>

<a href="@Url.Action("create")">
    <h2>Add New Record</h2>
</a>


  